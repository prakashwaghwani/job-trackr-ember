<div class="container">

  <div class="panel text-center">
    <h2>{{model.name}}</h2>
  </div>

  <div class="row">
      <!-- contacts -->
      <div id="contact-opportunity" class="col-md-4">
        {{link-to "Create new Contact"}}<br>
          {{#each model.contacts as |contact|}}
          {{contact.name}}
            <ul>
              <li>{{contact.email}}</li>
              <li>{{contact.phone}}</li>
            </ul>
          {{/each}}
      </div>

      <!-- opportunity info -->
      <div id="opportunity-info" class="col-md-6 col-md-offset-1">
        <p>
          {{model.description}}
        </p>
      </div>
      
      <!-- Notes! - below opportunity info  -->
      <div class="col-md-6 col-md-offset-5">
        <button {{action "newNote" }}>New Note!</button>
        <!-- this form should be hidden until new note is clicked -->
        <br>
        <br>
          {{#if showForm}}
          <form>
            {{textarea value=content cols="100" rows="10"}}
            <br>
            <button {{action "save"}}>Create Note</button>
          </form>
          {{/if}}

            <!-- render notes -->
          <!-- {{#each model.notes as |note|}}
          <div class="container">
            <p>{{note.content}}</p>
            <button {{action 'deleteNote' note}}>Delete Note</button>
          </div>
          {{/each}} -->
      </div>
  </div>


</div>